{% comment %}
  Enhanced Custom Footer
  Features: Dynamic columns, adjustable icon sizes, newsletter integration
{% endcomment %}
<footer class="cf-footer" style="
  --cf-gap: {{ section.settings.gap }}px;
  --cf-bg: {{ section.settings.background_color }};
  --cf-text: {{ section.settings.text_color }};
  --cf-columns: {{ section.settings.desktop_columns }};
  --cf-contact-icon-size: {{ section.settings.contact_icon_size }}px;
">
  <div>
  <div class="cf-container">
  {%- assign menu_grid_open = false -%}

    {%- for block in section.blocks -%}
      {% case block.type %}

        {%- when 'brand_block' -%}
          <div class="cf-block cf-brand" 
               data-column-width="{{ block.settings.column_width }}"
               {{ block.shopify_attributes }}>
            {% if block.settings.logo != blank %}
              <a href="{{ routes.root_url }}" class="cf-brand__logo">
                <img
                  src="{{ block.settings.logo | image_url }}"
                  alt="{{ shop.name }}"
                  width:"90"
                  height:"90"
                  style="
                    --cf-logo-desktop: {{ block.settings.logo_width_desktop }}px;
                    --cf-logo-mobile: {{ block.settings.logo_width_mobile }}px;
                  "
                >
              </a>
            {% endif %}

            <div class="cf-brand__social" style="--cf-social-icon-size: {{ block.settings.social_icon_size }}px;">
              {% for i in (1..6) %}
                {% assign icon_key = 'icon_' | append: i %}
                {% assign link_key = 'link_' | append: i %}

                {% if block.settings[icon_key] != blank and block.settings[link_key] != blank %}
                    <a href="{{ block.settings[link_key] }}" target="_blank" rel="noopener">
                        <svg
                            class="cf-icon cf-social-icon"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            aria-hidden="true"
                            focusable="false"
                        >
                            {% render 'icon', icon: block.settings[icon_key] %}
                        </svg>
                    </a>
                {% endif %}
              {% endfor %}
            </div>
          </div>

        {%- when 'menu_block' -%}

              {%- unless menu_grid_open -%}
    <div class="cf-menu-grid">
    {%- assign menu_grid_open = true -%}
  {%- endunless -%}

          <div class="cf-block cf-menu" 
               data-column-width="{{ block.settings.column_width }}"
               {{ block.shopify_attributes }}
               style="--cf-menu-font: {{ block.settings.font_size }}px">
            {% if block.settings.heading != blank %}
              <h4 class="cf-heading">{{ block.settings.heading }}</h4>
            {% endif %}

            {% if block.settings.menu != blank %}
              <ul class="cf-menu__list cf-menu--mobile-{{ block.settings.mobile_columns }}">
                {% for link in linklists[block.settings.menu].links %}
                  <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>

        {%- when 'contact_block' -%}
            
  {%- if menu_grid_open -%}
    </div>
    {%- assign menu_grid_open = false -%}
  {%- endif -%}

          <div class="cf-block cf-contact" 
               data-column-width="{{ block.settings.column_width }}"
               {{ block.shopify_attributes }}>
            {% if block.settings.heading != blank %}
              <h4 class="cf-heading">{{ block.settings.heading }}</h4>
            {% endif %}

            <div class="cf-contact__items">
              {% for i in (1..5) %}
                {% assign icon = 'icon_' | append: i %}
                {% assign text = 'text_' | append: i %}
                {% if block.settings[icon] != blank and block.settings[text] != blank %}
                  <div class="cf-contact__item">
                    <svg
                        class="cf-icon cf-contact-icon"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        {% render 'icon', icon: block.settings[icon] %}
                    </svg>
                    <div class="cf-contact__text">{{ block.settings[text] }}</div>
                    </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>

        {%- when 'info_block' -%}
          <div class="cf-block cf-info" 
               data-column-width="{{ block.settings.column_width }}"
               {{ block.shopify_attributes }}>
            {% if block.settings.heading != blank %}
              <h4 class="cf-heading">{{ block.settings.heading }}</h4>
            {% endif %}

            {% for i in (1..3) %}
              {% assign icon = 'icon_' | append: i %}
              {% assign text = 'text_' | append: i %}
              {% if block.settings[icon] != blank and block.settings[text] != blank %}
                <div class="cf-info__row">
                    <svg
                        class="cf-icon cf-contact-icon"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        {% render 'icon', icon: block.settings[icon] %}
                    </svg>
                    <div class="cf-info__text">{{ block.settings[text] }}</div>
                </div>
              {% endif %}
            {% endfor %}
          </div>

        {%- when 'newsletter_block' -%}
          <div class="cf-block cf-newsletter" 
               data-column-width="{{ block.settings.column_width }}"
               {{ block.shopify_attributes }}>
            <div class="newsletter-container">
              {% if block.settings.heading != blank %}
                <h4 class="cf-heading">{{ block.settings.heading }}</h4>
              {% endif %}
              {% if block.settings.subtext != blank %}
                <div class="cf-subtext">{{ block.settings.subtext }}</div>
              {% endif %}

              {%- form 'customer', id: 'ContactFooter', class: 'cf-newsletter-form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="cf-newsletter-form__field-wrapper">
                  <div class="field">
                    <input
                      id="NewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="field__input"
                      value="{{ form.email }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="ContactFooter-error"
                      {% elsif form.posted_successfully? %}
                        aria-describedby="ContactFooter-success"
                      {% endif %}
                      placeholder="{{ block.settings.placeholder | default: 'Email address' }}"
                      required
                    >
                    <button
                      type="submit"
                      class="newsletter-form__button field__button"
                      name="commit"
                      id="Subscribe"
                      aria-label="{{ 'newsletter.button_label' | t }}"
                    >
                      <svg width="14" aria-hidden="true" focusable="false" class="icon icon-arrow" viewBox="0 0 14 10">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor">
                      </svg>
                    </button>
                  </div>
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="ContactFooter-error">
                      <svg aria-hidden="true" focusable="false" class="icon icon-error" viewBox="0 0 13 13">
                        <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                        <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                        <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                      </svg>
                      {{ form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email }}
                    </small>
                  {%- endif -%}
                  {%- if form.posted_successfully? -%}
                    <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>
                      {% render 'icon-success' %}
                      {{ 'newsletter.success' | t }}
                    </h3>
                  {%- endif -%}
                </div>
              {%- endform -%}
            </div>
          {%- when 'bottom_bar' -%}
            <div class="cf-bottom" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
          </div>
              {%- when 'bottom_bar' -%}
            <div class="cf-bottom-mobile" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>

      {% endcase %}
    {%- endfor -%}

      {%- if menu_grid_open -%}
    </div>
  {%- endif -%}

  </div>
   
       
</footer>


{% stylesheet %}

.cf-bottom-mobile{
  display:none !important;
}
.cf-menu-grid {
  display: contents;
}

@media (max-width: 768px) {
    .cf-footer {
        margin-bottom: 30px;
        padding-bottom: 40px;
        text-align:center;
    }
.cf-bottom-mobile{
  display:block !important;
          order: 8;
}
.cf-bottom{
  display:none !important;
}
  .cf-menu-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25px 20px;
    width: 100%;
  }
  /* .cf-brand{
    order: 1;
  } */
   .cf-menu-grid{
    order: 3;
}
}
.cf-footer {
  position: relative;
  background:
    linear-gradient(
      180deg,
      rgba(10, 20, 41, 0.85) 0%,
      rgba(10, 20, 41, 0.7) 45%,
      rgba(10, 20, 41, 0.9) 100%
    ),
    url("https://cdn.shopify.com/s/files/1/0733/7967/6327/files/footer-background-image.png?v=1768203290");
  background-repeat: no-repeat;
  background-position: center -6px;
  background-size: 100% 108.728%;
  color: var(--cf-text);
  font-family: 'DM Sans', sans-serif;
}

.cf-footer::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(10, 20, 41, 0.35);
  backdrop-filter: blur(10.25px);
  -webkit-backdrop-filter: blur(10.25px);
  z-index: 0;
}

.cf-footer > * {
  position: relative;
  z-index: 1;
}

.cf-footer a {
  color: var(--cf-text);
  text-decoration: none;
}

.cf-footer a:hover {
  opacity: 0.8;
}

.cf-container {
  display: grid;
  grid-template-columns: repeat(var(--cf-columns), 1fr);
  gap: var(--cf-gap);
  max-width: 1400px;
  margin: 0 auto;
  padding: 60px 20px;
}

/* Dynamic column width system */
.cf-block[data-column-width="1"] {
  grid-column: span 1;
}

.cf-block[data-column-width="2"] {
  grid-column: span 2;
}

.cf-block[data-column-width="3"] {
  grid-column: span 3;
}

/* Blocks */
.cf-block {
  min-width: 0;
}

.cf-heading {
  font-size: 21px;
  font-weight: 700;
  margin-bottom: 14px;
}

/* Brand */
.cf-brand__logo {
    display: flex;
    justify-content: center;
    align-items: center;
}

.cf-brand__logo img {
  width: var(--cf-logo-desktop);
  max-width: 100%;
  height: auto;
}

.cf-brand__social {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 14px;
  margin-top: 16px;
}

.cf-brand__social a {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: var(--cf-text);
  transition: opacity 0.2s ease;
}

.cf-brand__social a:hover {
  opacity: 0.7;
}

/* Icon sizing */
.cf-social-icon {
  width: var(--cf-social-icon-size);
  height: var(--cf-social-icon-size);
  display: block;
  fill: currentColor;
}

.cf-contact-icon {
  width: var(--cf-contact-icon-size);
  height: var(--cf-contact-icon-size);
  min-width: var(--cf-contact-icon-size);
  display: block;
  fill: currentColor;
  flex-shrink: 0;
}

/* Menu */
.cf-menu__list {
  list-style: none;
  padding: 0;
  margin: 0;
  font-size: var(--cf-menu-font);
}

.cf-menu__list li {
  margin-bottom: 8px;
}

.cf-menu__list a {
  color: var(--cf-text);
  transition: opacity 0.2s ease;
  font-size: 14px;
  font-weight: 400;
  line-height: normal;
}

.cf-menu__list a:hover {
  opacity: 0.7;
}

/* Contact */
.cf-contact__item {
  display: flex;
  gap: 12px;
  margin-bottom: 12px;
  align-items: flex-start;
}

.cf-contact__text {
  flex: 1;
  line-height: 1.5;
}

.cf-contact__text p,
.cf-info__text p,
.cf-bottom p {
  font-family: "DM Sans";
  font-size: 14px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  margin: 0;
}

/* Info */
.cf-info__row {
  display: flex;
  gap: 12px;
  margin-bottom: 14px;
  align-items: flex-start;
}

.cf-info__text {
  flex: 1;
  line-height: 1.5;
}

/* Newsletter */
.newsletter-container {
  border-radius: 4px;
  padding: 16px;
  border: 1px solid #000;
  background: rgba(0, 0, 0, 0.17);
  backdrop-filter: blur(33px);
}

.cf-newsletter {
  max-width: 100%;
}

.cf-newsletter .cf-heading {
  font-size: 21px;
  font-weight: 700;
  margin-bottom: 8px;
}

.cf-subtext {
  margin-bottom: 16px;
  font-size: 14px;
  line-height: 1.5;
}

.cf-newsletter-form__field-wrapper {
  margin-top: 16px;
}

.field {
  position: relative;
  display: flex;
}

.field__input {
  flex: 1;
  padding: 12px 50px 12px 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: #FFF;
  color: #0F0F0F;
  border-radius: 4px;
  font-size: 14px;
  width: 100%;
}

.field__input::placeholder {
  color: #0F0F0F;
}

.field__input:focus {
  outline: none;
  background: #FFF;
  color: #0F0F0F;
}

.field__input:hover {
  background-color: #FFF;
}

.field__button {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  background: transparent;
  border: none;
  color: #000;
  cursor: pointer;
  padding: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.field__button:hover {
  opacity: 0.7;
}

.newsletter-form__message {
  display: block;
  margin-top: 8px;
  font-size: 13px;
}

.newsletter-form__message--success {
  color: #4caf50;
}

/* Bottom */
.cf-bottom {
  grid-column: 1 / -1;
  text-align: center;
  margin-top: 40px;
  padding-top: 30px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 13px;
  opacity: 0.8;
}

/* Tablet adjustments */
@media (min-width: 769px) and (max-width: 1024px) {
  .cf-container {
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    padding: 50px 20px;
  }

  .cf-block[data-column-width="2"],
  .cf-block[data-column-width="3"] {
    grid-column: span 1;
  }

  .cf-contact__text,
  .cf-info__text {
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .cf-contact__item,
  .cf-info__row {
    gap: 10px;
  }
}

/* Mobile */
@media (max-width: 768px) {
  .cf-container {
    display: flex;
    flex-direction: column;
    text-align: center;
    padding: 40px 20px;
    gap: 30px;
  }

  /* Mobile order */
  .cf-brand {
    order: 1;
  }

  .cf-newsletter {
    order: 2;
  }

  .cf-menu {
    order: 3;
  }

  .cf-contact {
    order: 4;
  }

  .cf-info {
    order: 5;
  }

  .cf-bottom {
    order: 6;
  }

  .cf-brand__logo img {
    width: var(--cf-logo-mobile);
    margin: 0 auto;
  }

  .cf-brand__social {
    justify-content: center;
  }

  /* Menu - 2 columns side by side */
  .cf-menu__list {
    display: grid !important;
    grid-template-columns: 1fr 1fr !important;
    gap: 8px 20px;
    text-align: center;
    columns: unset !important;
  }

  .cf-menu--mobile-2 {
    grid-template-columns: 1fr 1fr !important;
    columns: unset !important;
  }

  .cf-menu--mobile-1 {
    grid-template-columns: 1fr !important;
    columns: unset !important;
  }

  .cf-menu__list li {
    margin-bottom: 0;
  }

  .cf-heading {
    font-size: 17px;
  }

  /* Newsletter adjustments */
  .newsletter-container {
    padding: 20px 16px;
  }

  .cf-newsletter .cf-heading {
    font-size: 20px;
  }

  /* Contact block - icon above text, minimal gap */
  .cf-contact__item {
    flex-direction: column;
    align-items: center;
    gap: 4px;
    margin-bottom: 20px;
  }

  .cf-contact__text {
    text-align: center;
  }

  /* Info block - icon above text, minimal gap */
  .cf-info__row {
    flex-direction: column;
    align-items: center;
    gap: 4px;
    margin-bottom: 20px;
  }

  .cf-info__text {
    text-align: center;
  }

  /* Bottom bar */
  .cf-bottom {
    margin-top: 20px;
    padding-top: 20px;
  }
}
{% endstylesheet %}


{% schema %}
{
  "name": "Custom Footer",
  "tag": "section",
  "class": "cf-footer-section",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "desktop_columns",
      "label": "Desktop columns",
      "options": [
        { "value": "4", "label": "4 columns" },
        { "value": "5", "label": "5 columns" }
      ],
      "default": "5"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Column gap",
      "min": 0,
      "max": 80,
      "step": 2,
      "unit": "px",
      "default": 24
    },
    {
      "type": "header",
      "content": "Icon Sizes"
    },
    {
      "type": "range",
      "id": "contact_icon_size",
      "label": "Contact icon size",
      "info": "For location, phone, landline, email icons",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#0b1a2b"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "brand_block",
      "name": "Brand (Logo + Social)",
      "settings": [
        {
          "type": "select",
          "id": "column_width",
          "label": "Column width",
          "options": [
            { "value": "1", "label": "1 column" },
            { "value": "2", "label": "2 columns" },
            { "value": "3", "label": "3 columns" }
          ],
          "default": "1"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "range",
          "id": "logo_width_desktop",
          "label": "Logo width (desktop)",
          "min": 80,
          "max": 300,
          "step": 5,
          "unit": "px",
          "default": 175
        },
        {
          "type": "range",
          "id": "logo_width_mobile",
          "label": "Logo width (mobile)",
          "min": 80,
          "max": 260,
          "step": 5,
          "unit": "px",
          "default": 140
        },
        {
          "type": "header",
          "content": "Social icons"
        },
        {
          "type": "range",
          "id": "social_icon_size",
          "label": "Social icon size",
          "min": 16,
          "max": 32,
          "step": 2,
          "unit": "px",
          "default": 22
        },
        {
          "type": "select",
          "id": "icon_1",
          "label": "Icon 1",
          "options": [
            { "value": "", "label": "None" },
            { "value": "facebook", "label": "Facebook" },
            { "value": "instagram", "label": "Instagram" },
            { "value": "youtube", "label": "YouTube" },
            { "value": "linkedin", "label": "LinkedIn" }
          ]
        },
        { "type": "url", "id": "link_1", "label": "Icon 1 link" },
        {
          "type": "select",
          "id": "icon_2",
          "label": "Icon 2",
          "options": [
            { "value": "", "label": "None" },
            { "value": "facebook", "label": "Facebook" },
            { "value": "instagram", "label": "Instagram" },
            { "value": "youtube", "label": "YouTube" },
            { "value": "linkedin", "label": "LinkedIn" }
          ]
        },
        { "type": "url", "id": "link_2", "label": "Icon 2 link" },
        {
          "type": "select",
          "id": "icon_3",
          "label": "Icon 3",
          "options": [
            { "value": "", "label": "None" },
            { "value": "facebook", "label": "Facebook" },
            { "value": "instagram", "label": "Instagram" },
            { "value": "youtube", "label": "YouTube" },
            { "value": "linkedin", "label": "LinkedIn" }
          ]
        },
        { "type": "url", "id": "link_3", "label": "Icon 3 link" },
        {
          "type": "select",
          "id": "icon_4",
          "label": "Icon 4",
          "options": [
            { "value": "", "label": "None" },
            { "value": "facebook", "label": "Facebook" },
            { "value": "instagram", "label": "Instagram" },
            { "value": "youtube", "label": "YouTube" },
            { "value": "linkedin", "label": "LinkedIn" }
          ]
        },
        { "type": "url", "id": "link_4", "label": "Icon 4 link" }
      ]
    },
    {
      "type": "menu_block",
      "name": "Menu column",
      "settings": [
        {
          "type": "select",
          "id": "column_width",
          "label": "Column width",
          "options": [
            { "value": "1", "label": "1 column" },
            { "value": "2", "label": "2 columns" }
          ],
          "default": "1"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        },
        {
          "type": "range",
          "id": "font_size",
          "label": "Menu font size",
          "min": 12,
