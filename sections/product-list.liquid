{% capture before_promo_grid_item %}
  {% if section.settings.promo_image != blank %}
    <div class="resource-list__item resource-list__item--promo">
      <div class="product-card product-card--promo">
        <div class="product-card__media promo-banner">
          {% if section.settings.promo_link != blank %}<a href="{{ section.settings.promo_link }}">{% endif %}
            <img src="{{ section.settings.promo_image | image_url: width: 800 }}" alt="Before Products banner" loading="lazy">
            <div class="promo-banner__overlay">
              {% if section.settings.promo_heading != blank %}<h3 class="before-promo-heading-style">{{ section.settings.promo_heading }}</h3>{% endif %}
              {% if section.settings.promo_text != blank %}<p>{{ section.settings.promo_text }}</p>{% endif %}
              {% if section.settings.promo_button_label != blank %}
                <button class="before-products-banner-button">{{ section.settings.promo_button_label }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16" fill="none">
                      <path d="M3.99438 7.98887H11.9833M11.9833 7.98887L8.65459 4.66016M11.9833 7.98887L8.65459 11.3176" stroke="#F6F6F6" stroke-width="1.33149" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button> 
            {% endif %}
            </div>
          {% if section.settings.promo_link != blank %}</a>{% endif %}
        </div>
      </div>
    </div>
  {% endif %}
{% endcapture %}

{% capture after_promo_grid_item %}
