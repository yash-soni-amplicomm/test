{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-text-slider-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    overflow: hidden;
    padding: {{ block.settings.padding_vertical }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-icon-text-slider__container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-icon-text-slider__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    transition: transform 0.5s ease;
  }

  .ai-icon-text-slider__item-{{ ai_gen_id }} {
    flex: 0 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 12px;
  }

  .ai-icon-text-slider__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-icon-text-slider__icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-icon-text-slider__icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-icon-text-slider__icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-icon-text-slider__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    font-weight: {{ block.settings.text_weight }};
  }

  @media screen and (min-width: 750px) {
    .ai-icon-text-slider__track-{{ ai_gen_id }} {
      justify-content: center;
      flex-wrap: wrap;
    }

    .ai-icon-text-slider__item-{{ ai_gen_id }} {
      width: calc((100% - ({{ block.settings.desktop_columns | minus: 1 }} * {{ block.settings.gap }}px)) / {{ block.settings.desktop_columns }});
    }
  }

  @media screen and (max-width: 749px) {
    .ai-icon-text-slider__item-{{ ai_gen_id }} {
      width: calc((100% - ({{ block.settings.mobile_columns | minus: 1 }} * {{ block.settings.gap }}px)) / {{ block.settings.mobile_columns }});
    }
  }
{% endstyle %}

<icon-text-slider-{{ ai_gen_id }}
  class="ai-icon-text-slider-{{ ai_gen_id }}"
  data-mobile-columns="{{ block.settings.mobile_columns }}"
  data-desktop-columns="{{ block.settings.desktop_columns }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-icon-text-slider__container-{{ ai_gen_id }}">
    <div class="ai-icon-text-slider__track-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign icon_key = 'icon_' | append: i
          assign text_key = 'text_' | append: i
          assign icon = block.settings[icon_key]
          assign text = block.settings[text_key]
        %}
        
        {% if text != blank %}
          <div class="ai-icon-text-slider__item-{{ ai_gen_id }}">
            <div class="ai-icon-text-slider__icon-{{ ai_gen_id }}">
              {% if icon != blank %}
                <img
                  src="{{ icon | image_url: width: 200 }}"
                  alt="{{ text | escape }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                <div class="ai-icon-text-slider__icon-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-icon-text-slider__text-{{ ai_gen_id }}">{{ text }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</icon-text-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class IconTextSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.isMobile = window.innerWidth < 750;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-icon-text-slider__track-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-icon-text-slider__item-{{ ai_gen_id }}');
        this.mobileColumns = parseInt(this.dataset.mobileColumns);
        this.desktopColumns = parseInt(this.dataset.desktopColumns);
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed);

        this.updateSlider();
        this.startAutoplay();

        window.addEventListener('resize', () => {
          const wasMobile = this.isMobile;
          this.isMobile = window.innerWidth < 750;
          if (wasMobile !== this.isMobile) {
            this.currentIndex = 0;
            this.updateSlider();
            this.stopAutoplay();
            this.startAutoplay();
          }
        });

        let startX = 0;
        let currentX = 0;

        this.track.addEventListener('touchstart', (e) => {
          if (!this.isMobile) return;
          startX = e.touches[0].clientX;
          this.stopAutoplay();
        });

        this.track.addEventListener('touchmove', (e) => {
          if (!this.isMobile) return;
          currentX = e.touches[0].clientX;
        });

        this.track.addEventListener('touchend', () => {
          if (!this.isMobile) return;
          const diff = startX - currentX;
          if (Math.abs(diff) > 50) {
            if (diff > 0) {
              this.next();
            } else {
              this.prev();
            }
          }
          this.startAutoplay();
        });
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      startAutoplay() {
        if (!this.isMobile || this.items.length <= this.mobileColumns) return;
        
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.next();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      prev() {
        if (!this.isMobile) return;
        const columns = this.mobileColumns;
        if (this.currentIndex > 0) {
          this.currentIndex -= columns;
          if (this.currentIndex < 0) this.currentIndex = 0;
        } else {
          this.currentIndex = this.items.length - columns;
        }
        this.updateSlider();
      }

      next() {
        if (!this.isMobile) return;
        const columns = this.mobileColumns;
        const maxIndex = this.items.length - columns;
        if (this.currentIndex < maxIndex) {
          this.currentIndex += columns;
          if (this.currentIndex > maxIndex) this.currentIndex = maxIndex;
        } else {
          this.currentIndex = 0;
        }
        this.updateSlider();
      }

      updateSlider() {
        if (!this.isMobile) {
          this.track.style.transform = 'translateX(0)';
          return;
        }

        const itemWidth = this.items[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.track).gap);
        const offset = this.currentIndex * (itemWidth + gap);
        
        this.track.style.transform = `translateX(-${offset}px)`;
      }
    }

    customElements.define('icon-text-slider-{{ ai_gen_id }}', IconTextSlider{{ ai_gen_id }});
  })();
</script>

